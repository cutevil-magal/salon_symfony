{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_service_edit' %}

{% block main %}
    <h1>{{ 'title.edit_service'|trans({'id': service.id}) }}</h1>

    {{ include('admin/service/_form.html.twig', {
        form: form,
        button_label: 'action.save'|trans,
        include_back_to_home_link: true,
    }, with_context = false) }}
{% endblock %}

{% block sidebar %}
    <div class="section">
        <a href="{{ path('admin_service_show', {id: service.id}) }}" class="btn btn-lg btn-block btn-success">
            <i class="fa fa-eye" aria-hidden="true"></i> {{ 'action.show_service'|trans }}
        </a>
    </div>

    <div class="section actions">
        {# {{ include('admin/service/_delete_form.html.twig', {post: post}, with_context = false) }}  #}

    </div>

    {{ parent() }}

    {{ show_source_code(_self) }}
{% endblock %}
