{% extends 'admin/layout.html.twig' %}

{% block body_id 'admin_record_index' %}

{% block main %}
    <h1>{{ 'title.record_list'|trans }}</h1>

    <table class="table table-striped table-middle-aligned">
        <thead>
        <tr>
            <th scope="col">{{ 'label.title'|trans }}</th>
            <th scope="col">{{ 'record.status'|trans }}</th>
            <th scope="col">{{ 'record.time'|trans }}</th>
            <th scope="col">{{ 'record.service'|trans }}</th>
            <th scope="col" class="text-center"><i class="fa fa-cogs" aria-hidden="true"></i> {{ 'label.actions'|trans }}</th>
        </tr>
        </thead>
        <tbody>
        {% for entity in items %}
            <tr>
                <td>{{ entity.name }}</td>
                <td>{{ entity.getStatus() }}</td>
                <td>{{ entity.getTime()|date("d.m.Y H:i") }}</td>
                <td>{{ entity.getService().getName() }}</td>

                <td class="text-right">
                    <div class="item-actions">

                        <a href="{{ path('admin_record_edit', {id: entity.id}) }}" class="btn btn-sm btn-default">
                            <i class="fa fa-eye" aria-hidden="true"></i> {{ 'record.manage'|trans }}
                        </a>
{#
                        <a href="{{ path('admin_post_edit', {id: post.id}) }}" class="btn btn-sm btn-primary">
                            <i class="fa fa-edit" aria-hidden="true"></i> {{ 'action.edit'|trans }}
                        </a>  #}

                    </div>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="4" align="center">{{ 'record.no_records_found'|trans }}</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>
{% endblock %}

{% block sidebar %}
    {{ parent() }}
{% endblock %}
